<?xml version='1.0' encoding='UTF-8' ?>
<!-- was: <?xml version="1.0" encoding="UTF-8"?> -->
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:p="http://www.springframework.org/schema/p"
       xmlns:aop="http://www.springframework.org/schema/aop"
       xmlns:tx="http://www.springframework.org/schema/tx"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.0.xsd
       http://www.springframework.org/schema/aop http://www.springframework.org/schema/aop/spring-aop-4.0.xsd
       http://www.springframework.org/schema/tx http://www.springframework.org/schema/tx/spring-tx-4.0.xsd">

    <bean class="org.springframework.web.servlet.mvc.support.ControllerClassNameHandlerMapping"/>
    
    <!-- se declaran los controladores en un xml aparte -->
    <import resource="config/bean-servlet.xml" />

    <!--
    Most controllers will use the ControllerClassNameHandlerMapping above, but
    for the index controller we are using ParameterizableViewController, so we must
    define an explicit mapping for it.
    -->
    <bean id="urlMapping" class="org.springframework.web.servlet.handler.SimpleUrlHandlerMapping">
        <property name="mappings">
            <props>
                <prop key="login.do">loginController</prop>		
		<prop key="principal.do">principalController</prop>		
                <prop key="register.do">registerController</prop>
                <prop key="expiracion.do">expiredController</prop>
                <prop key="activar.do">activarController</prop>
                <prop key="reiniciar.do">reiniciaContrasenaController</prop>                                
                <prop key="inscripcion.do">inscripcionController</prop>
                <prop key="consultarInscripcion.do">consultarInscripcionController</prop>
                <prop key="retiroInscripcion.do">retiroInscripcionController</prop>
                <prop key="consultarActasNotas.do">consultarActasNotasController</prop>
                <prop key="adicionInscripcion.do">adicionInscripcionController</prop>
                <prop key="reporteInscripciones.do">reporteInscripcionesController</prop>
                <prop key="seleccionAsignaturaProfesor.do">seleccionAsignaturaProfesorController</prop>
                <prop key="seleccionProfesorAsignaturaSeccion.do">seleccionProfesorAsignaturaSeccionController</prop>
                <prop key="cargaNotasProfesor.do">cargaNotasProfesorController</prop>
                <prop key="asignaturaSeccionAula.do">asignaturaSeccionAulaController</prop>
                <prop key="horariosProfesor.do">horariosProfesorController</prop>
                <prop key="recordNotas.do">recordNotasController</prop>
                <prop key="notasProfesorSeccion.do">notasProfesorSeccionController</prop>
                <prop key="cargaNotasProfesorAdmin.do">cargaNotasProfesorAdminController</prop>
                <prop key="buscarAlumnoCedulaPeriodoAdmin.do">buscarAlumnoCedulaPeriodoAdminController</prop>
                <prop key="usuariosAdmin.do">usuariosAdminController</prop>
                <prop key="editarUsuarioAdmin.do">editarUsuarioAdminController</prop>
                <prop key="pasarAGrado.do">pasarAGradoController</prop>
                
                <prop key="xgraduadoDetalle.do">xgraduadoDetalleController</prop>
                <prop key="alumnosInscritos.do">alumnosInscritosController</prop>
                
                <prop key="graduado.do">graduadoController</prop>
                <prop key="configurarPeriodo.do">configurarPeriodoController</prop>
                
                <prop key="construccion.do">construccionController</prop>
            </props>
        </property>
    </bean>

    <!-- genera el nombre del jsp a invocar segun las reglas de navegabilidad de los controladores -->
    <bean id="viewResolver"	class="org.springframework.web.servlet.view.InternalResourceViewResolver">
	<!--property name="viewClass" value="org.springframework.web.servlet.view.JstlView" /-->
            <property name="viewClass" value="com.iupg.sicoes.vista.JstlView" />
            <property name="prefix" value="/WEB-INF/jsp/" />
            <property name="suffix" value=".jsp" />
    </bean>
</beans>
